  <script>
    // Simple carousel (CSS handles transitions; this toggles slides for older browsers)
    (function() {
      const slides = document.querySelectorAll('.slides picture');
      let i = 0;
      function show() {
        slides.forEach((s, idx) => s.style.display = (idx === i ? 'block' : 'none'));
        i = (i + 1) % slides.length;
      }
      show();
      setInterval(show, 3000);
    })();
  </script>
